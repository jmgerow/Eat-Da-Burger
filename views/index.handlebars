<div class="container">
    <div class="row">
        <div class="col s12 center">
            <h1>Burgers</h1>
        </div>
    </div>

    <div class="row">
        <div class="col s6 center">
            <h2>Available Burgers</h2>

            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burgers-block devoured=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col s6 center">
            <h2>Devoured Burgers</h2>

            <ul>
                {{#each burgers}} {{#if devoured}} {{> burgers/burgers-block devoured=false}} {{/if}} {{/each}}
            </ul>

        </div>

    </div>

    <div class="row">
        <div class="col s12">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="new-burger">Burger Name:</label>
                    <input type="text" id="new-burger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>

</div>